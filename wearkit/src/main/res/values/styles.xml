<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wearkit_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/option_background</item>
    </style>

    <style name="wearkit_option.dismiss" parent="wearkit_option">
        <item name="android:background">@drawable/option_background_dismiss</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>
</resources>